
#include <iostream>
#include <string.h>
using namespace std;

void stringnome(char str[], char nome){
	int i, count=20;
	
	for (i = 0; i < count; i++)
	{
		str[i]=nome;
	}
	
	puts(str);

}


int main (){
	
	char str [20];
	char nome;
	
	cout <<"Entre com uma palavra:";
	cin>>nome;


	stringnome(str, nome);
	
	
}
